######################################################################
############## "Universal" Makefile by J. A. Dantzig   ###############
############## modified to handle C as well as Fortran ###############
######################################################################

######################################################################
####### Novice users should modify entries in this block only ########
######################################################################

EXC1 = base.a

######################################################################
####### C programmers will need to modify entries in this block ######
####### NOTE: you must also set the name of EXC1 above          ######
######################################################################

CFLAGS = -c -O3

IDIR = 

LIBS = -lm 

CC = cc

LD = ar 

######################################################################
################## Experts only beyond this point!! ##################
######################################################################

### most basic lib should be put at the last##########################

OBJ1 =  mathbase.o

BINDIR = .

######################################################################
############################## Targets ###############################
######################################################################

$(EXC1): $(OBJ1)
	$(LD) -r $(EXC1) $(OBJ1) 

HEAD=*.h 


%.o:    %.cc  $(HEAD)
	$(CC) $(CFLAGS) $<
